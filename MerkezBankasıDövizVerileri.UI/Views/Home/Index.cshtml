@model Entities
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-10">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Merkez Bankası Döviz Kurları</h4>
                <div class="card-body">
                    <div class="form-group float-left">
                        <label asp-for="USD" class="control-label">USD-Amerikan DOLARI = @Model.USD TL</label> <br />

                        <label asp-for="AUD" class="control-label">AUD-Avusturalya DOLARI = @Model.AUD TL</label> <br />

                        <label asp-for="EUR" class="control-label">EUR-EURO = @Model.EUR TL</label> <br />

                        <label asp-for="GBP" class="control-label">GBP-İNGİLİZ STERLİNİ = @Model.GBP TL</label> <br />

                    </div>
                    <div class="form-group float-right">
                        <label class="control-label">Not: Türkiye Cumhuriyet Merkez Bankası tarafından @Model.CurrencyDate Günü Saat 15:30'da Belirlenen Döviz Kuru Değerleridir. Verilerin Güncellenme Tarihi: @Model.CreateDate</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
